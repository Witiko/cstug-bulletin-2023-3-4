\input randomnames\relax

\ProvidesExplPackage
  {randomnames}%
  {2023-06-25}%
  {1.0.2}%
  {Character name generators for creative writing in LuaLaTeX}

\RequirePackage{xparse}

\NewDocumentCommand
  { \newmodel }
  { O{} m }
  {
    \randomnames_new_model:nn
      { #1 }
      { #2 }
  }

\NewDocumentCommand
  { \addname }
  { m m }
  {
    \randomnames_add_name:nn
      { #1 }
      { #2 }
  }
\NewDocumentCommand
  { \inputnames }
  { m m }
  {
    \randomnames_input_names:nn
      { #1 }
      { #2 }
  }

\NewDocumentCommand
  { \randomname }
  { O{} m }
  {
    \randomnames_take_random_walk:nn
      { #1 }
      { #2 }
  }
